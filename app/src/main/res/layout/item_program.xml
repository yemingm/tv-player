<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_program_icon"
            android:layout_width="@dimen/program_icon_height"
            android:layout_height="@dimen/program_icon_height"
            android:layout_margin="@dimen/program_icon_margin"
            android:src="@drawable/play_icon" />

        <TextView
            android:id="@+id/tv_program_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/program_icon_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_channel_item" />

        <TextView
            android:id="@+id/tv_program_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/program_program_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_channel_item" />

    </LinearLayout>

</RelativeLayout>